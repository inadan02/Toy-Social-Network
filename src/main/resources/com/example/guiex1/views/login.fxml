<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="317.0" prefWidth="409.0" spacing="20.0" style="-fx-background-color: CBC3E3;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiex1.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="textErr" textFill="#ff0101" />
    <HBox prefHeight="29.0" prefWidth="298.0">
        <Label prefHeight="29.0" prefWidth="100.0" style="-fx-text-fill: #301934;" text="email:">
         <font>
            <Font size="14.0" />
         </font></Label>
        <TextField fx:id="textEmail" prefHeight="25.0" prefWidth="150.0" />
    </HBox>
    <HBox prefHeight="29.0" prefWidth="298.0">
        <Label prefHeight="29.0" prefWidth="100.0" style="-fx-text-fill: #301934;" text="password:">
         <font>
            <Font size="14.0" />
         </font></Label>
        <TextField fx:id="textPassword" prefHeight="25.0" prefWidth="150.0" />
    </HBox>
    <Button onAction="#onLogin" prefHeight="28.0" prefWidth="150.0" style="-fx-background-color: #301934; -fx-text-fill: CBC3E3;" text="Log In" />
   <Button onAction="#onCreateAccount" prefHeight="28.0" prefWidth="150.0" style="-fx-text-fill: CBC3E3; -fx-background-color: #301934;" text="Create new account" />
</VBox>
